	        } else if (code === 'AACD08') {
	            return '팔';
	        } else if (code === 'AACD09') {
	            return '손';
	        } else if (code === 'AACD10') {
	            return '엉덩이';
	        } else if (code === 'AACD11') {
	            return '무릎';
	        } else if (code === 'AACD12') {
	            return '다리';
	        }
	        
	        return code;
	    }
		
		for(var i = 0; i<bData.length; i++) {
			var d = bData[i];
			labelList.push(bodyCdToName(d.bodyCd));
			valueList.push(d.treatmentCount);

			console.log("bData : ", d);
